<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_file"
        android:contentDescription="Typ pliku"
        app:tint="@color/textPrimary" />

    <ImageView
        android:id="@+id/deleteAttachment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_trash"
        android:contentDescription="UsuÅ„"
        app:tint="@color/accentGold" />

    <HorizontalScrollView
        android:id="@+id/fileScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon"
        android:layout_toStartOf="@id/deleteAttachment"
        android:layout_centerVertical="true"
        android:scrollbars="none">

        <TextView
            android:id="@+id/fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nazwa_bardzo_dlugiego_pliku_co_sie_nie_miesci.pdf"
            android:textColor="@color/textPrimary"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp" />
    </HorizontalScrollView>
</RelativeLayout>